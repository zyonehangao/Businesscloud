<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f8f8f8"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:id="@+id/custom_bottom_sheet_camera_menu"
    android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/ll_capture_photo"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/camera_menu_capture_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="image"
                android:padding="10dp"
                android:background="@drawable/cc_menu_button_background"
                android:src="@drawable/cc_ic_camera" />

            <TextView
                android:id="@+id/textCapturePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/camera_menu_capture_photo"
                android:layout_toEndOf="@+id/camera_menu_capture_photo"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textColor="#787878"
                android:textSize="18sp"
                android:text="Capture Photo" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_capture_video"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/camera_menu_capture_video"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="image"
                android:background="@drawable/cc_menu_button_background"
                android:padding="10dp"
                android:src="@drawable/cc_video_call" />

            <TextView
                android:id="@+id/textCaptureVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/camera_menu_capture_video"
                android:layout_toEndOf="@+id/camera_menu_capture_video"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textColor="#787878"
                android:textSize="18sp"
                android:text="Capture Video" />

        </RelativeLayout>

</LinearLayout>